<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>CalculatorService</servlet-name>
        <servlet-class>gob.gonet.testsecurews.services.CalculatorService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CalculatorService</servlet-name>
        <url-pattern>/services/CalculatorService</url-pattern>
    </servlet-mapping>
    
    <security-role>
        <role-name>PORTAL_BASICUSER</role-name>
    </security-role>
    
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>other</realm-name>
    </login-config>
    
    <security-constraint>
        <display-name>pages_auth</display-name>
        <web-resource-collection>
            <web-resource-name>pages_auth</web-resource-name>
            <url-pattern>/services/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>PORTAL_BASICUSER</role-name>
        </auth-constraint>
    </security-constraint>
        
    <security-constraint>
        <display-name>pages_auth</display-name>
        <web-resource-collection>
            <web-resource-name>pages_auth</web-resource-name>
            <url-pattern>/portal/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>PORTAL_BASICUSER</role-name>
        </auth-constraint>
    </security-constraint>
    
</web-app>
